@model List<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<button onclick="location.href='@Url.Action("New", "Movies")'" class="btn btn-primary">New Movie</button>

@if (Model.Any())
{
    <table class="table table-bordered">
        <thead>
            <th>Movie</th>
            <th>Genre</th>
        </thead>
        <tbody>
        @foreach (var movie in Model)
        {
            <tr>
                <td>@Html.ActionLink(movie.Name, "Edit", new { Id = movie.Id })</td>
                <td>@movie.Genre.Name</td>
            </tr>
        }
        </tbody>
    </table>
}
else
{
    <text>We currently don't have any movies.</text>
}